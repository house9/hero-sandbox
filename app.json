{
  "name": "hero-sandbox",
  "description": "Heroku Review App Example",
  "scripts": {
    "postdeploy": "sh config/deploy/heroku_review_app.sh"
  },
  "env": {
    "HEROKU_REVIEW_APP_INITIAL_DEPLOY": {
      "required": true,
      "value": "YES"
    },
    "HEROKU_APP_NAME": {
      "required": true
    },
    "LANG": {
      "required": true
    },
    "RACK_ENV": {
      "required": true
    },
    "RAILS_ENV": {
      "required": true
    },
    "RAILS_SERVE_STATIC_FILES": {
      "required": true
    },
    "SECRET_KEY_BASE": {
      "required": true
    }
  },
  "formation": {
    "worker": {
      "quantity": 1
    },
    "web": {
      "quantity": 1
    }
  },
  "addons": [
    "heroku-postgresql"
  ],
  "buildpacks": [
    {
      "url": "heroku/ruby"
    }
  ]
}
