{
  "name": "hero-sandbox",
  "description": "Heroku Review App Example",
  "scripts": {
    "postdeploy": "bash config/deploy/heroku_review_app_postdeploy.sh"
  },
  "env": {
    "HEROKU_APP_NAME": {
      "required": true
    },
    "LANG": {
      "required": true
    },
    "RACK_ENV": {
      "required": true
    },
    "RAILS_ENV": {
      "required": true
    },
    "RAILS_SERVE_STATIC_FILES": {
      "required": true
    },
    "SECRET_KEY_BASE": {
      "required": true
    },
    "test": {
      "env": {
        "HEROKU_APP_NAME": "test",
        "LANG": "en_US.UTF-8",
        "RACK_ENV": "test",
        "RAILS_ENV": "test",
        "RAILS_SERVE_STATIC_FILES": "true",
        "SECRET_KEY_BASE": "test"
      }
    }
  },
  "formation": {
    "worker": {
      "quantity": 1
    },
    "web": {
      "quantity": 1
    }
  },
  "addons": [
    "heroku-postgresql"
  ],
  "buildpacks": [
    {
      "url": "heroku/ruby"
    }
  ]
}
